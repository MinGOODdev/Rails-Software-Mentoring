<h2>정보 수정</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-group">
    <%= f.label "ID (학번)" %>
    <%= f.input :email, label: false, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <hr/>

    <%= f.label "현재 비밀번호" %>
    <%= f.input :current_password, label: false, placeholder: "현재 비밀번호를 입력하세요.", required: true %>

    <hr/>

    <%= f.label "변경할 비밀번호" %>
    <%= f.input :password, label: false, autocomplete: "off", placeholder: "변경할 비밀번호를 입력하세요.", required: false %>

    <hr/>

    <%= f.label "변경할 비밀번호 확인" %>
    <%= f.input :password_confirmation, label: false, required: false %>

    <hr/>

    <!-- 새로 추가한 항목들 -->
    <%= f.label "이름" %>
    <%= f.input :student_name, required: true, label: false, placeholder: '이름을 입력하세요.' %>

    <hr/>

    <%= f.label "학년" %>
    <%= f.input :grade, required: true, label: false, placeholder: '학년을 입력하세요.' %>

    <hr/>

    <%= f.label "연락처" %>
    <%= f.input :phone_number, required: true, label: false, placeholder: '핸드폰 번호를 입력하세요.' %>

    <hr/>

    <%= f.label "이메일" %>
    <%= f.input :mail, required: true, label: false, placeholder: 'email을 입력하세요.' %>

    <hr/>

    <%= f.label "학과" %><br/>
    <%= f.collection_select(:department_id, Department.all, :id, :department_name, :prompt => true) %>

    <hr/>

    <%= f.label "은행" %>
    <%= f.input :bank_name, required: true, label: false, placeholder: '거래 은행을 입력하세요.' %>

    <hr/>

    <%= f.label "계좌" %>
    <%= f.input :bank_account, required: true, label: false, placeholder: '은행 계좌를 입력하세요.' %>
  </div>

  <hr/>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: "btn btn-warning" %>
  </div>
<% end %>

<!--<h3>Cancel my account</h3>-->

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
