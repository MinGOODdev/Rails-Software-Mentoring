<h1>Notices#new</h1>
<p>Find me in app/views/notices/new.html.erb</p>

<form action="/notices/create" method="post" enctype="multipart/form-data">
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<div>
		<label for="title">제목</label>
		<input id="title" name="title">
	</div>
	<div>
		<label for="content">내용</label>
		<textarea id="content" name="content" row="30"></textarea>
	</div>
	
	<div>
    <label for="attachment">첨부파일</label>
    <input type="file" id="attachment" name="attachment" placeholder="(선택)첨부파일">
  </div>
	
	<div>
		<button type="submit">저장</button>
	</div>
</form>
