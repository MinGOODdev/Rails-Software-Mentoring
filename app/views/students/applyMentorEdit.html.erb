<h1>mentors#applyGet</h1>
<div class="col-lg-12">
  <form action="/students/applyMentorUpdate" method="post" enctype="multipart/form-data">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div>
      <label for="semester_id">학기</label>
      <select id="semester_id" name="semester_id">
        <% @semesters.each do |sem| %>
          <% if sem.semester_able %>
            <option value='<%= sem.id %>'><%= sem.semester_name %></option>
          <% end %>
        <% end %>
      </select>
    </div>
    <div>
      <label for="team_name">팀 이름</label>
      <input id="team_name" name="team_name" value="<%= @apply.team_name %>">
    </div>
    <div>
      <label for="subject">멘토링 주제</label>
      <input id="subject" name="subject" value="<%= @apply.subject %>">
    </div>
    <div>
      <label for="purpose">학습 목표</label>
      <textarea id="purpose" name="purpose" rows="30"><%= @apply.purpose %></textarea>
    </div>
    <div>
      <label for="content">내용</label>
      <textarea id="content" name="content" rows="30"><%= @apply.content %></textarea>
    </div>
    <div>
      <label for="method">학습 방법</label>
      <textarea id="method" name="method" rows="30"><%= @apply.method %></textarea>
    </div>
    <div>
      <label for="attachment">포트폴리오</label>
      <input type="file" id="attachment" name="attachment" placeholder="(선택)포트폴리오">
    </div>

    <div>
      <button type="submit">저장</button>
    </div>
  </form>
</div>